{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "0.3.0",
  "description": "__MSG_extensionDescription__",
  "author": "Daniel Doblado",
  "homepage_url": "https://github.com/dobladov/Telegrama",
  "action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "48": "icons/icon48.png"
    },
    "default_title": "__MSG_extensionAction__"
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "48": "icons/icon48.png"
  },
  "background": {
    "service_worker": "telegrama.js"
  },
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "default_locale": "en",
  "commands": {
    "share": {
      "suggested_key": {
        "default": "Ctrl+Shift+B"
      },
      "description": "__MSG_extensionAction__"
    }
  }
}
